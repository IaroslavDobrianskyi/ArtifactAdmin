@model IEnumerable<ArtifactAdmin.BL.ModelsDTO.ActionTemplateResultDto>

@{
    ViewBag.Title = "Index";
}

<h2>Шаблон дії.Результат</h2>

<p>
    @Html.ActionLink("Новий запис", "Create")
</p>
<table id="ActionTemplateResult" class="tablesorter">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PredispositionResultModifier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExperienceModifier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArtifactPosibility)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GoldModifier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuestTemplate1)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PredispositionResultModifier)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExperienceModifier)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArtifactPosibility)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GoldModifier)
                </td>
                <td>
                    @Html.TextAreaFor(modelItem => item.QuestTemplate1.Name, new { @readonly = true, rows = "5", cols = "40" })
                </td>
                <td>
                    @Html.ActionLink("Змінити", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Детально", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Видалити", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
<div id="pager" style="position: none;">
    <form>
        <img src="@Url.Content("~/Content/images/first.png")" class="first" />
        <img src="@Url.Content("~/Content/images/prev.png")" class="prev" />
        <input type="text" class="pagedisplay" />
        <img src="@Url.Content("~/Content/images/next.png")" class="next" />
        <img src="@Url.Content("~/Content/images/last.png")" class="last" />
        <select class="pagesize">
            <option selected="selected" value="5">5</option>
            <option value="10">10</option>
            <option value="20">20</option>
            <option value="30">30</option>
            <option value="40">40</option>
        </select>
    </form>
</div>
@section ScriptsSortActionTemplateResult{
    <script type="text/javascript">
    $(document).ready(function () {
        $("#ActionTemplateResult").tablesorter({ headers: { 5: { sorter: false } },  widthFixed: true, sortList: [[0, 0]] })
        .tablesorterPager({ container: $("#pager"), size: $(".pagesize option:selected").val() });
    });
    </script>
}