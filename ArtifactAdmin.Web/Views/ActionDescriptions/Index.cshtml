@model IEnumerable<ArtifactAdmin.BL.ModelsDTO.ActionDescriptionDto>

@{
    ViewBag.Title = "Index";
}

<h2>Опис дій</h2>

<p>
    @Html.ActionLink("Новий запис", "Create")
</p>
<table id="ActionDescription" class="tablesorter">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ActionTemplate1)
             </th>
            <th>
                @Html.DisplayNameFor(model => model.MapZone1.ZoneName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActionText)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ActionTemplate1.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MapZone1.ZoneName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActionText)
                </td>
                <td>
                    @Html.ActionLink("Змінити", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Детально", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Видалити", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
<div id="pager" style="position: none;">
    <form>
        <img src="@Url.Content("~/Content/images/first.png")" class="first" />
        <img src="@Url.Content("~/Content/images/prev.png")" class="prev" />
        <input type="text" class="pagedisplay" />
        <img src="@Url.Content("~/Content/images/next.png")" class="next" />
        <img src="@Url.Content("~/Content/images/last.png")" class="last" />
        <select class="pagesize">
            <option selected="selected" value="5">5</option>
            <option value="10">10</option>
            <option value="20">20</option>
            <option value="30">30</option>
            <option value="40">40</option>
        </select>
    </form>
</div>
@section ScriptsSortActionDescription{
    <script type="text/javascript">
    $(document).ready(function () {
        $("#ActionDescription").tablesorter({ headers: { 4: { sorter: false }, 3: { sorter: false } }, widthFixed: true, sortList: [[0, 0]] })
        .tablesorterPager({ container: $("#pager"), size: $(".pagesize option:selected").val() });
    });
    </script>
}