@model IEnumerable<ArtifactAdmin.BL.ModelsDTO.RaceDto>

@{
    ViewBag.Title = "Index";
}

<h2>Раси</h2>

<p>
    @Html.ActionLink("Новий запис", "Create")
</p>
<table id="Race" class="tablesorter">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Characreristics)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CharacteristicsLevelModifier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Predisposition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Properties)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Icon)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.TextAreaFor(modelItem => item.Description, new { rows = "10", cols = "50", @readonly = true })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Characreristics)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CharacteristicsLevelModifier)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Predisposition)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Properties)
                </td>
                <td>
                    <img src="@(@ArtifactAdmin.Web.App_Start.ImagePath.ImPath+"Races/"+@item.Icon)" id="icon" width=" 160 " height=" 120">
                </td>
                <td>
                    @Html.ActionLink("Змінити", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Детально", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Видалити", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
<div id="pager" style="position: none;">
    <form>
        <img src="@Url.Content("~/Content/images/first.png")" class="first" />
        <img src="@Url.Content("~/Content/images/prev.png")" class="prev" />
        <input type="text" class="pagedisplay" />
        <img src="@Url.Content("~/Content/images/next.png")" class="next" />
        <img src="@Url.Content("~/Content/images/last.png")" class="last" />
        <select class="pagesize">
            <option selected="selected" value="5">5</option>
            <option value="10">10</option>
            <option value="20">20</option>
            <option value="30">30</option>
            <option value="40">40</option>
        </select>
    </form>
</div>
@section ScriptsSortRace{
    <script type="text/javascript">
    $(document).ready(function () {
        $("#Race").tablesorter({ headers:{5:{sorter:false},6:{sorter:false}},widthFixed: true, sortList: [[0, 0]]  })
        .tablesorterPager({ container: $("#pager"), size: $(".pagesize option:selected").val() });
    });
    </script>
}