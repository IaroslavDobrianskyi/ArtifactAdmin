@model ArtifactAdmin.BL.ModelsDTO.StepTemplateDto

@{
    ViewBag.Title = "Delete";
}

<h2>Видалення запису</h2>

<h3>Ви дійсно хочете видалити цей запис?</h3>
<div>
    <h4>Шаблон кроку- об'єкти</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.TextAreaFor(model => model.Description, new { rows = "5", cols = "50", @readonly = true })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StepText)
        </dt>

        <dd>
            @Html.TextAreaFor(model => model.StepText, new { rows = "5", cols = "50", @readonly = true })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.TextAreaFor(model => model.Name, new { rows = "5", cols = "50", @readonly = true })
        </dd>
        <dt>
            @Html.DisplayNameFor(model=>model.Desire1.Name)
        </dt>
        <dd>
            @Html.TextAreaFor(model => model.Desire1.Name, new { rows = "5", cols = "50", @readonly = true })
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Видалити" class="btn btn-default" /> 
            @Html.ActionLink("Повернутись до списку", "Index")
        </div>
    }
</div>
