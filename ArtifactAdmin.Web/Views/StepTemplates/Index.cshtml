@model IEnumerable<ArtifactAdmin.Models.StepTemplate>

@{
    ViewBag.Title = "Index";
}

<h2>Шаблони кроків</h2>

<p>
    @Html.ActionLink("Новий запис", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StepText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StepObjectStepTemplates)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.TextAreaFor(modelItem => item.Description, new { @readonly = true, rows = "5", cols = "50" })
        </td>
        <td>
            @Html.TextAreaFor(modelItem => item.StepText, new { @readonly = true, rows = "5", cols = "50" })
        </td>
        <td>
            @Html.TextAreaFor(modelItem => item.Name, new { @readonly = true, rows = "5", cols = "50" })
        </td>
        <td>
           @if (item.StepObjectStepTemplates.Count == 0)
           {
<span>---</span>
           }
           else {<span></span> }
        </td>
        <td>
            @Html.ActionLink("Змінити", "Edit", new { id = item.id }) |
            @Html.ActionLink("Детально", "Details", new { id = item.id }) |
            @Html.ActionLink("Видалити", "Delete", new { id = item.id })
        </td>
    </tr>
}

</table>
