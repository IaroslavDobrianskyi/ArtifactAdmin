@model IEnumerable<ArtifactAdmin.Models.ArtifactType>

@{
    ViewBag.Title = "Index";
}

<h2>Типи артефактів</h2>

<p>
    @Html.ActionLink("Новий запис", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Icon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descrioption)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Icon)
            <img src="@(@ArtifactAdmin.App_Start.ImagePath.ImPath+"ArtifactTypes/"+@item.Icon)" id="icon" width=" 160 " height=" 120">
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descrioption)
        </td>
        <td>
            @Html.ActionLink("Змінити", "Edit", new { id = item.id }) |
            @Html.ActionLink("Детально", "Details", new { id = item.id }) |
            @Html.ActionLink("Видалити", "Delete", new { id = item.id })
        </td>
    </tr>
}

</table>
