@model IEnumerable<ArtifactAdmin.Models.Constellation>

@{
    ViewBag.Title = "Index";
}

<h2>Сузір'я</h2>

<p>
    @Html.ActionLink("Новий запис", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Icon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <img src="@(@ArtifactAdmin.App_Start.ImagePath.ImPath+"Constellations/"+@item.Icon)" id="icon" width=" 160 " height=" 120">
        </td>
        <td>
            @Html.TextAreaFor(modelItem => item.Description, new { @readonly = true, rows = "10", cols = "50" })
        </td>
        <td>
            @Html.ActionLink("Змінити", "Edit", new { id=item.id }) |
            @Html.ActionLink("Детально", "Details", new { id=item.id }) |
            @Html.ActionLink("Видалити", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
